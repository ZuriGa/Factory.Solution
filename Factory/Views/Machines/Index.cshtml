@{
  Layout = "_Layout";
}

@using Factory.Models;

<div class="card-body"> 
<h1>Machines</h1>
<hr />
@if (@Model.Count == 0)

{
  <h3>There are no machines yet. </h3>
}

@foreach (Machine machine in Model)
{
  <li>@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId})</li>
}
<br />
</div>
<br />
<button type="button" class="btn btn-outline-warning btn-lg">@Html.ActionLink("Add new machine", "Create")</button>
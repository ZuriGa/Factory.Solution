@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<div class="card-body">
<h2>Add an Engineer</h2>

<h4>Add a Engineer to this Machine:  @Html.DisplayFor(model => model.MachineName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.Label("Select an engineer")
  @Html.DropDownList("EngineerId")

  <input type="submit" value="Save" />
}
<br />
</div>
<br />
<button type="button" class="btn btn-outline-warning btn-lg">@Html.ActionLink("Back to Machine list", "Index", "Machines")</button>
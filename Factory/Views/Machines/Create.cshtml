@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<div class="card-body"> 
<h4>Add a new machine</h4>
<hr />
<p>@Html.ValidationMessageFor(model => model.MachineName,  "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
<p>@Html.ValidationMessageFor(model => model.Installed, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{

  @Html.LabelFor(model => model.MachineName)
  @Html.TextBoxFor(model => model.MachineName)

  @Html.LabelFor(model => model.Installed)
  @Html.TextBoxFor(model => model.Installed)

  <input type="submit" value="Add new machine" class="btn btn-warning btn-lg"/>
}
<br />
</div>
<br />
<button type="button" class="btn btn-outline-warning btn-lg">@Html.ActionLink("Show all machines", "Index")</button>
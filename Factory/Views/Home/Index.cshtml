@{
    Layout = "_Layout";
}

@using Factory.Models;

<h1>Welcome to Dr. Sillystringz's Factory!</h1>

<hr />

<div class="card">


    <h4>Engineers</h4>
    <hr />
    @if (Model["engineers"].Length == 0)
    {
        <p>No Engineers have been added yet!</p>
    }
    <ul>
        @foreach (Engineer engineer in Model["engineers"])
        {
            <li>@Html.ActionLink(@engineer.EngineerName, "Details", "Engineers", new { id = @engineer.EngineerId })</li>
        }
    </ul>
</div>
<hr />

<div class="card">
    <h4>Machine</h4>
    <hr />
    @if (Model["machines"].Length == 0)
    {
        <p>No Machine have been added yet!</p>
    }
    <ul>
        @foreach (Machine machine in Model["machines"])
        {
            <li>@Html.ActionLink(@machine.MachineName, "Details", "Machines", new { id = @machine.MachineId })</li>
        }
    </ul>
</div>


<hr />

<button type="button" class="btn btn-outline-warning btn-lg">@Html.ActionLink("Manage engineers", "Index", "Engineers")</button>
<button type="button" class="btn btn-outline-warning btn-lg">@Html.ActionLink("Manage machines", "Index", "Machines")</button>

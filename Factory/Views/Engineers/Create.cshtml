@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<div class="card-body"> 
<h4>Add a new engineer</h4>
<hr />
<p>@Html.ValidationMessageFor(model => model.EngineerName, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.HireDate)

  @Html.LabelFor(model => model.EngineerName)
  @Html.TextBoxFor(model => model.EngineerName)

  <input type="submit" value="Add new engineer" class="btn btn-warning btn-lg"/>
}
<br />
</div>
<br />
<button type="button" class="btn btn-outline-warning btn-lg">@Html.ActionLink("Show all engineers", "Index")</button>

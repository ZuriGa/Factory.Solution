@{
  Layout = "_Layout";
}

@using Factory.Models;


<div class="card-body">
  <h1>Engineers:</h1>
  <hr />


  @if (@Model.Count == 0)
  {
    <h3>There are no Engineers yet.</h3>
  }

  @foreach (Engineer engineer in Model)
  {
    <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId })</li>
  }

</div>
<br />
<button type="button" class="btn btn-outline-warning btn-lg">@Html.ActionLink("Add new engineer", "Create")</button>